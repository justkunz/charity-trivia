<!DOCTYPE html>
<html lang="en">
<% include header %>
<body>
  <div class="container">
    <% include navbar %>
  </div>
  <br/>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <form class="form-horizontal" action="/charity_signup" method="post" enctype="multipart/form-data">
        <fieldset>

        <!-- Form Name -->
        <legend>Sign Up</legend>
        
        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- Include the form innards for charity data -->
        <% include charityFormTemplate %>

        <!-- Button -->
        <div class="control-group">
          <label class="control-label" for="sign_up"></label>
          <div class="controls">
            <button id="sign_up" name="sign_up" class="btn btn-primary">Sign Up</button>
          </div>
        </div>

        </fieldset>
        </form>
      </div><!-- end col -->
    </div><!-- end row -->
  
  <br/>
  
  </div><!-- End container div -->

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="js/bootstrap.min.js">
    </script>
</body>
</html>